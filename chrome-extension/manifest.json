{
  "manifest_version": 3,
  "name": "ChatGPT 侧边栏助手",
  "version": "1.0.0",
  "description": "为 ChatGPT 对话界面添加侧边栏，显示历史问题记录",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://chatgpt.com/*"],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content.js"],
      "css": ["sidebar.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ChatGPT 侧边栏助手"
  }
}
